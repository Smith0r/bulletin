<?xml version="1.0" encoding="utf-8"?>
<settings>
    <title>Contact</title>
    <description>Contact Form display. Sends email to configured address.</description>
    <is_frontend>1</is_frontend>
    <is_backend>1</is_backend>
    <is_locked>0</is_locked>
    <author>Chris Smith</author>
    <author_url>https://github.com/Smith0r</author_url>
    <version>1.2.0</version>
    <name value="Contact Form" icon="comment-alt" />
    <items value="enquiries" label="Enquiry List" />
    <fields type="text" name="params[admin_email]" label="Admin Email" />
    <fields type="text" name="params[complete_title]" label="Completion Page Title" default="Thanks for your message" />
    <fields type="textarea" editor="true" name="params[complete_message]" label="Completion Page Message" />
    <controller label="Contact Form" internal_name="enquiry" description="Display the Contact form." />
</settings>