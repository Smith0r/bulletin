            </table>
            <table>
                CREATE TABLE `#__users_recovery` (`id` int(11) NOT NULL AUTO_INCREMENT, `user_id` int(11) DEFAULT NULL, `token` varchar(5000) DEFAULT NULL, `reset_requested` int(11) DEFAULT NULL, PRIMARY KEY (`id`));
            </table>
        </tables>
